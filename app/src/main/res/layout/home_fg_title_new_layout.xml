<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#272B2E"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:visibility="gone"
        android:id="@+id/tv_title"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:text="球咖"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:id="@+id/et_search_home_fg"
        android:hint="阿森纳"
        android:gravity="center_vertical"
       android:drawablePadding="5dp"
       android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:drawableLeft="@drawable/search_home"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/white_shape_stroke_solid_white"
        android:textSize="15sp"
        android:textColor="@color/coment_black"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/iv_left_title_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/message"
            android:padding="11.5dp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_msg_count_home"
            android:textSize="7sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="9dp"
            android:layout_marginRight="9dp"
            android:layout_gravity="right"
            android:background="@drawable/cricle_shape_red"
            android:layout_width="9dp"
            android:layout_height="9dp" />

    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_right_title_home"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_top"
            />
    </FrameLayout>
</LinearLayout>